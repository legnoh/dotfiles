# alias

## ghq
alias gg="ghq get"
alias gl="ghq look"

## colordiff
alias diff="colordiff"

## ls
alias ls="ls -alhG"

## make ssl certificate
alias skgrsa="ssh-keygen -t rsa -b 2048 -T`date +%s`"
alias skged="ssh-keygen -t ed25519 -T`date +%s`"

## sync dotfile
alias rr="source ~/.zshrc"
alias rrs="~/.dotfiles/setup.sh"
alias rrr="cd ~/src/github.com/legnoh/dotfiles && git pull && cd - && source ~/.zshrc"
alias rmc="rm -rf ~/src/github.com/legnoh/dotfiles && git clone https://github.com/legnoh/dotfiles.git ~/src/github.com/legnoh/dotfiles && cd - && source ~/.zshrc"

## ssh
alias ssh="cat ~/.ssh/conf.d/*.conf > ~/.ssh/config;ssh"
alias scp="cat ~/.ssh/conf.d/*.conf > ~/.ssh/config;scp"
alias git="cat ~/.ssh/conf.d/*.conf > ~/.ssh/config;git"
alias knife="cat ~/.ssh/conf.d/*.conf > ~/.ssh/config;knife"

## gpg2
alias gpg="gpg2"

## pcf
alias cflp='cf login -a https://api.run.pivotal.io'
alias cfldev='cf login -a https://api.local.pcfdev.io -u admin -o "pcfdev-org" -s pcfdev-space --skip-ssl-validation -p admin'
alias amn='open https://console.local.pcfdev.io/2'
