  email = legknmj@icloud.com
  signingkey = A14AE3FB

[include]
  path = ~/.gitconfig.internal

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto

[core]
  autocrlf = input # CRLFを自動変換
  editor = vim
  excludesfile = ~/code/src/github.com/legnoh/dotfiles/dot/gitignore
  quotepath = false

[gpg]
  program = /usr/local/MacGPG2/bin/gpg2

[commit]
  gpgsign = true

[pull]
  rebase = true

[push]
  default = current # defaultのpush先は今いるブランチのみ

[merge]
  tool = vimdiff
  ff = false

[branch]
  autosetuprebase = always

[alias]
  s   = status
  b   = branch
  br  = branch -r          # remote branchを表示
  l   = log --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn%x09%Creset%s' # onelineでlogを出す
  ld  = log -p             # diffも一緒に出す
  lo  = log origin         # originのlog
  log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s' # logをtree表示
  log-all   = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset' # logをtree表示
  dm = diff master         # masterとのdiff
  dw = diff --color-words  # 単語単位でいろつけてdiff
  dc = diff --cached       # addされているものとのdiff
  d1 = diff HEAD~          # HEADから1つ前とdiff

[http]
  sslVerify = true

[ghq]
  root = ~/code/src

[credential]
  helper = cache --timeout=3600
