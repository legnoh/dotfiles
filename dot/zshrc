export LANG=ja_JP.UTF-8
export HISTFILE=~/.zsh_history
export HISTSIZE=1000000000000
export SAVEHIST=1000000000000
export PROMPT_COMMAND='history -a; history -r'
export ZPLUG_HOME=/usr/local/opt/zplug
export DOT=$HOME/code/src/github.com/legnoh/dotfiles
export GOPATH=$HOME/code
export PATH=$DOT/bin:$GOPATH/bin:$PATH

source $ZPLUG_HOME/init.zsh
zstyle ":zplug:tag" depth 1
zstyle ":zplug:tag" defer 2
zplug "denysdovhan/spaceship-prompt", use:spaceship.zsh, from:github, as:theme
zplug 'felixr/docker-zsh-completion'
zplug 'frodenas/bosh-zsh-autocomplete-plugin'
zplug 'psprint/zsh-navigation-tools'
zplug 'zsh-users/zsh-autosuggestions'
zplug 'zsh-users/zsh-completions'
zplug "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc", from:local
zplug "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc", from:local

alias cflpws='cf l -a api.run.pivotal.io'
alias gl="ghq look"
alias gpg="gpg2"
alias ls="ls -alhG"
alias zclr="rm -rf $ZPLUG_HOME && git clone --depth 1 https://github.com/zplug/zplug.git $ZPLUG_HOME && exec $SHELL -l"

source $HOME/.zshrc.optional
if ! zplug check; then zplug install; fi
eval "$(anyenv init -)" "$(direnv hook zsh)"
zplug load
